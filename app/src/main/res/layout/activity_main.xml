<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#E1F0FB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomeCidade"
        android:layout_width="221dp"
        android:layout_height="145dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="168dp"
        android:text="NomeCidade"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tempAtual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tempMaxString"
        android:layout_width="79dp"
        android:layout_height="39dp"
        android:text="Max:"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/tempAtual"
        android:layout_width="269dp"
        android:layout_height="133dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:text="270ºC"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/tempMin"
        android:layout_width="81dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="6dp"
        android:text="21ºC"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tempAtual"
        app:layout_constraintEnd_toStartOf="@+id/nomeCidade"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeCidade"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tempMinString"
        android:layout_width="79dp"
        android:layout_height="39dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="403dp"
        android:layout_marginBottom="27dp"
        android:text="Min:"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tempAtual"
        app:layout_constraintEnd_toStartOf="@+id/tempMin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digite_cidade" />

    <TextView
        android:id="@+id/tempMax"
        android:layout_width="81dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="3dp"
        android:text="33ºC"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tempAtual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/tempMaxString"
        app:layout_constraintTop_toBottomOf="@+id/nomeCidade"
        app:layout_constraintVertical_bias="0.482" />

    <TextView
        android:id="@+id/digite_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a cidade:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cidadeInput"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:hint="hint"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buscarInfos"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:layout_editor_absoluteX="167dp" />

</androidx.constraintlayout.widget.ConstraintLayout>