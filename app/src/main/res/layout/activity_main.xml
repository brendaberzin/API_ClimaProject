<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#E1F0FB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomeCidade"
        android:layout_width="199dp"
        android:layout_height="64dp"
        android:text="NomeCidade"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/tempMaxString"
        android:layout_width="79dp"
        android:layout_height="39dp"
        android:text="Max:"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/tempAtual"
        android:layout_width="269dp"
        android:layout_height="133dp"
        android:text="270ºC"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="96sp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/tempMin"
        android:layout_width="81dp"
        android:layout_height="39dp"
        android:text="21ºC"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/tempMinString"
        android:layout_width="79dp"
        android:layout_height="39dp"
        android:text="Min:"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/tempMax"
        android:layout_width="81dp"
        android:layout_height="39dp"
        android:text="33ºC"
        android:textAlignment="center"
        android:textColor="#292727"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/digite_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a cidade:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="32dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cidadeInput"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:hint="hint"
        android:textColor="#000000"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>